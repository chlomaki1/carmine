{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "isolatedModules": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client",
            "unplugin-vue-router/client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "auto-imports.d.ts"
    ]
}
